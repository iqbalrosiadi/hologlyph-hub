extends layout

block content
	h1=title
	p adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. 
	
	.contentBox
		h4.border-bottom 
		.table-responsive
			table.table.table-hover.va-middle.u-mr-top-20
				thead
					tr
						th 
				tbody
					each val in list_devices
						tr
							td
								div(style='max-width: 700px;')
									.col-sm-6
										h5 Assigned tag marker: #{val.marker}
										.image-block
												img.image(src='/marker/' + val.marker+'.png' width="225" height="225" alt="Marker")
									.col-sm-6(style='margin-left:-100px;')
										a(href=val.url)
											h2 #{val.device_name}
										h4.italic Number of sensor: #{val.sensor.length}
										each val_sensor in val.sensor
											h5 
												li
													a(href=val_sensor.url) #{val_sensor.sensor_name} Sensor

										br
										br
										a(href='device/'+val._id)(style='margin-right:10px;')
											button.btn.btn-primary View Device Detail 
										| 
										a(href='device/'+val._id+'/update') 
											button.btn.btn-primary Edit Device Detail 
					else
						tr
							td There are no glyph.
