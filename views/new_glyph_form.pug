                  div(style="margin-top: -20px")
                    .col-sm-2
                      div
                        h4 Size
                    .col-sm-2
                      div.form-group
                        label(for='glyph') Sensor:
                        select#glyph.form-control(type='select'  style="width:120px;"  placeholder='Select status' name='glyph' required='false')
                          for glyph in mark_list
                            if sensor
                              option(value=glyph.sensor_name selected=(sensor.glyph==glyph.sensor_name ? 'selected' : false)) #{glyph.sensor_name}
                            else
                              option(value=glyph.sensor_name) #{glyph.sensor_name}
                    .col-sm-2
                      div.form-group
                        label(for='min_val') Min Value
                        input#min_val.form-control(type='text' style="width:50px; margin-left:10px" placeholder='0'  name='min_val' required='false' value=(undefined===sensor ? '' : sensor.min_val))
